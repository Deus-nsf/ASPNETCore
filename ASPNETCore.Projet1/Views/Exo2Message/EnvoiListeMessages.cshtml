@model List<Message>


<form asp-action="EnvoiListeMessages">

	@for (int i = 0; i < 4; i++)
	{
		<label>entrez le Sender : </label>
		<input style="display:block" type="text" name="messages[@i].Sender" value="" placeholder="placeholder" />

		<label>entrez le Body : </label>
		<input style="display:block;margin-bottom:2rem" type="text" name="messages[@i].Body" value="" placeholder="placeholder" />


		<input type="hidden" name="messages[@i].Date" value="@DateTime.Now" placeholder="placeholder" />
	}

	<button>Valider</button>
</form>


<br />
<a class="btn btn-primary" asp-controller="Exo2Message" asp-action="Index">
	Retour
</a>